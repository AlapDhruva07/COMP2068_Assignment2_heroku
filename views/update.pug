extends layout

block content
  if(!user)
    h1 Please Login first!
  
  else
      section
        #login
          h1 Update Employee below
          form(method='POST' action='/update')
            div
                h5 Update First Name
                input(type='text' name='fname' value=employee.firstname)
            div
                h5 Update Last Name
                input(type='text' name='lname' value=employee.lastname)
            div
                h5 Update Email
                input(type='text' name='email' value=employee.email)
            div
                h5 Update Department
                input(type='text' name='department' value=employee.department)
            div
                input(type='hidden' name='id' value=employee.id)
                button(type='submit' value='Submit') Submit
  block content
  include footer