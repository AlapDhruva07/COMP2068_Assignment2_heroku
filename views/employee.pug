extends layout

block content
  if(!user)
    h1 Please Login first!

  else
      main
          if(employee && employee.length)
            table.table.table-dark.table-hover
                thead
                    th First Name
                    th Last Name
                    th Email
                    th Department
                    th Image
                    th Update
                    th Delete
                tbody
                    each emp in employee
                        tr
                            td= emp.firstname
                            td= emp.lastname
                            td= emp.email
                            td= emp.department
                            td
                                img#empimg(src='/images/'+emp.image)
                            td 
                                a(href='/update/'+emp.id) Update
                            td
                                form.deleteForm(id=emp.id)
                                    button(type='submit') Delete
          else
            h1 No Employee!
          script(src='https://code.jquery.com/jquery-3.5.1.min.js', integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=', crossorigin='anonymous')
          script(src='/javascripts/delete.js')    
  block content
  include footer
    